  it('finds tweet by id', ()=> {
    retrun createTweet('second tweet')
      .then(secondTweet => {
        const _id = secondTweet._id
        return request(app)
        .get(`/tweets/${id}`);
      })
      .then(res => {
        expect(res.body).toEqual({
          handle: 'second tweet',
          text: 'anotehr tweet',
          _id,
          __v: 0
          
        });
      });
  });
